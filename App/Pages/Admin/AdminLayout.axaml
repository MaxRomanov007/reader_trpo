<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="App.Pages.Admin.AdminLayout">
    <DockPanel>
        <DockPanel
            DockPanel.Dock="Top"
            Background="{DynamicResource SystemAltMediumColor}"
            LastChildFill="False">

            <HyperlinkButton
                DockPanel.Dock="Left"
                Margin="5"
                Click="CreateReportButton_OnClick"
                Content="Составить отчет" />
            <HyperlinkButton
                DockPanel.Dock="Right"
                Margin="5"
                Click="ExitButton_OnClick"
                Content="Выйти" />
            <HyperlinkButton
                DockPanel.Dock="Right"
                Margin="5"
                Click="BooksButton_OnClick"
                Content="Книги" />
            <HyperlinkButton
                DockPanel.Dock="Right"
                Margin="5"
                Click="OrdersButton_OnClick"
                Content="Заказы" />
        </DockPanel>

        <ContentControl Name="AdminContentControl" Padding="10" />
    </DockPanel>
</UserControl>
