<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="App.Pages.User.UserLayout">
    <DockPanel>
        <DockPanel
            DockPanel.Dock="Top"
            Background="{DynamicResource SystemAltMediumColor}"
            LastChildFill="False">

            <HyperlinkButton
                DockPanel.Dock="Left"
                Margin="5"
                Click="MainButton_OnClick"
                Content="Главная" />
            <HyperlinkButton
                DockPanel.Dock="Right"
                Margin="5"
                Click="ExitButton_OnClick"
                Content="Выйти" />
            <HyperlinkButton
                DockPanel.Dock="Right"
                Margin="5"
                Click="BasketButton_OnClick"
                Content="Корзина" />
        </DockPanel>

        <ContentControl Name="UserContentControl" Padding="10" />
    </DockPanel>
</UserControl>